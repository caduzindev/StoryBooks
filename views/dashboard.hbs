<h6>Dashboard</h6>
<h3>Bem Vindo {{name}}</h3>
<p>Aqui você poderá publicar suas historias</p>

{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stories/edit/{{_id}}">{{title}}</a></td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td>
                        <a href="/stories/edit/{{_id}}" class="btn btn-float">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form action="/stories/{{_id}}" method="post" id="form-delete">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-float red">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <blockquote>
        <p>Você não tem nenhuma historia criada</p>
    </blockquote>
{{/if}}
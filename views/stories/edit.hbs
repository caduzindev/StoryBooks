<h3>Edita a historia <strong>"{{story.title}}"</strong></h3>
<div class="row">
    <form action="/stories/edit" class="col s12" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" id="title" value="{{story.title}}">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    {{#select story.status}}
                    <option value="public" selected>Publico</option>
                    <option value="private">Privado</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <h5>Conte sua Historia:</h5>
                <textarea name="body" id="body">{{story.body}}</textarea>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Salvar" class="btn">
            <a href="/dashboard" class="btn orange">Cancelar</a>
        </div>
      </div>
    </form>
</div>
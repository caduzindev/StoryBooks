<h1>Historias</h1>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image"></div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{body}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{author.image}}" alt="">
                        <a href="/stories/user/{{author._id}}">{{author.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/{{_id}}" class="btn grey">Saiba Mais</a>
                </div>
            </div>
        </div>
    {{else}}
        <blockquote>
            <p>Nenhuma historia publicada</p>
        </blockquote>
    {{/each}}
</div>